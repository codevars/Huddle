<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8EE"
    android:paddingBottom="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    tools:context="com.srmvdp.huddle.PhoneNumber">


    <LinearLayout
        android:id="@+id/warningcontainer"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:background="@drawable/dialog">

        <TextView
            android:id="@+id/warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="2"
            android:paddingStart="20sp"
            android:paddingEnd="10sp"
            android:text="@string/mobilewarning"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/phonecontainer"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:layout_below="@+id/warningcontainer"
        android:layout_centerInParent="true"
        android:layout_marginTop="6sp"
        android:background="@drawable/dialog"
        android:gravity="center">


        <TextView
            android:id="@+id/countrycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:text="@string/countrycode"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/otp3"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/p10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0sp"
        android:background="?android:attr/selectableItemBackground">


        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/buttonmaterial"
            android:text="@string/submit"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>
