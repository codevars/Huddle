<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_posts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.srmvdp.huddle.Teachers.ClassPosts">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <Button
                android:id="@+id/notificationC"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/notificationgreen"
                android:gravity="center"
                android:textSize="15sp" />


        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:id="@+id/scrollviewC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:id="@+id/scrollcontainerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/credentialsC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp">

                        <EditText
                            android:id="@+id/title2C"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/titlenews" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/statusparentC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp">


                        <EditText
                            android:id="@+id/statusC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/summary" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:layout_marginTop="50sp">

                        <EditText
                            android:id="@+id/urlC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30sp"
                            android:hint="@string/url"
                            android:inputType="textUri" />

                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/subjects"
                        android:padding="15sp"
                        android:spinnerMode="dialog">


                    </Spinner>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/previewcontainerC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20sp"
                    android:background="@drawable/dialog"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/previewC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/buttonpanelC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/selectcontainerC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/customorangebutton"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/selectImagesC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:text="@string/imagechooser"
                            android:textColor="#fff" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/postcontainerC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="40sp"
                        android:layout_marginStart="40sp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/customgreenbutton"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonpostC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:text="@string/post"
                            android:textColor="#fff" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
